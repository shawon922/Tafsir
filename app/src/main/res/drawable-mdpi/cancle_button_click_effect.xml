<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/red_300"
                android:startColor="@color/red_300"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/red_300" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape>
            <gradient
                android:endColor="@color/gray_500"
                android:startColor="@color/gray_500"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_500" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>